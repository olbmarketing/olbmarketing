          plotOptions: {
            column: {
            dataLabels: {
                enabled: true
              }
            }
          },
          xAxis: {
            title: {
                text: 'Resides With'
            },
            tickInterval: 1
          },
          yAxis: {
            title: {
                text: 'Number of Families'
            },
            tickInterval: 1
          }
        }
      %>
