            dataLabels: {
                enabled: true
              }
            }
          },
          xAxis: {
            title: {
                text: 'Family is Catholic, Y=yes N=no'
            },
            tickInterval: 1
          },
          yAxis: {
            title: {
                text: 'Number of Families'
            },
            tickInterval: 1
          }
        }
      %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6">
