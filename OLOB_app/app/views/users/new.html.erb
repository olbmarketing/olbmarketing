

<%= form_for :user, url: '/users' do |f| %>
<div class="container" style="width:30%">
  <div class="form-signup">
    <div class="form-group">
      <h2>Create Account</h2>
    </div>
    <div class="form-group">
      <%= f.text_field :name ,:class => "form-control", :placeholder=>"Name", :required=>"", :autofocus=>""%>
    </div>
    <div class="form-group">
      <%= f.text_field :email ,:class => "form-control", :placeholder=>"Email", :required=>"", :autofocus=>""%>
    </div>
    <div class="form-group">
      <%= f.text_field :password ,:class => "form-control", :placeholder=>"Password", :required=>"", :autofocus=>""%>
    </div>
    <div class="form-group">
      <%= f.text_field :password_confirmation ,:class => "form-control", :placeholder=>"Password Confirmation", :required=>"", :autofocus=>""%>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", :class=>"btn btn-lg btn-primary btn-block" %>
    </div>
    <hr>
    Already have an account?   <%= link_to 'Login', '/login', :class=>"btn btn-default navbar-btn" %>
  </div>
</div>
<% end %>
