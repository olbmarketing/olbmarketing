

<%= form_for @user, url: '/users' do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="container" style="width:30%">
  <div class="form-signup">
    <div class="form-group">
      <h2>Create Account</h2>
    </div>
    <div class="form-group">
      <%= f.text_field :name ,:class => "form-control", :placeholder=>"Name", :autofocus=>""%>
    </div>
    <div class="form-group">
      <%= f.text_field :email ,:class => "form-control", :placeholder=>"Email", :autofocus=>""%>
    </div>
    <div class="form-group">
      <%= f.password_field :password ,:class => "form-control", :placeholder=>"Password", :autofocus=>""%>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation ,:class => "form-control", :placeholder=>"Password Confirmation", :autofocus=>""%>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", :class=>"btn btn-lg btn-primary btn-block" %>
    </div>
    <hr>
    Already have an account?   <%= link_to 'Login', '/login', :class=>"btn btn-default navbar-btn" %>
  </div>
</div>
<% end %>
